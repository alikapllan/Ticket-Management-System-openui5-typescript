<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <SelectDialog
        id="customerValueHelpDialog"
        title="{i18n>customersTitleValueHelp}"
        items="{customerModel>/}"
        search=".onValueHelpSearchCustomer"
        confirm=".onValueHelpCloseCustomer"
        cancel=".onValueHelpCloseCustomer">
        <StandardListItem
            iconDensityAware="false"
            iconInset="false"
            title="{customerModel>name}"
            description="{customerModel>email}" />
    </SelectDialog>
</core:FragmentDefinition>