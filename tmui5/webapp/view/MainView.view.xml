<mvc:View xmlns:core="sap.ui.core" controllerName="tmui5.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout">
    <Page id="pageMain">
        <customHeader>
            <Toolbar>
                <ToolbarSpacer />
                <HBox alignItems="Center" justifyContent="Center">
                    <!-- Icon color : dodgerblue https://www.w3.org/TR/css-color-3/#css-system -->
                    <core:Icon src="sap-icon://sap-ui5" color="#1e90ff"></core:Icon>
                    <Title text="{i18n>title}" class="sapUiTinyMarginBegin"></Title>
                </HBox>
                <ToolbarSpacer />
            </Toolbar>
        </customHeader>

        <content>

            <l:VerticalLayout>
                <l:HorizontalLayout content="{tiles>/}" allowWrapping="true">
                    <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                        header="{tiles>title}"
                        subheader="{tiles>subtitle}"
                        press=".onPress (${tiles>route})">
                        <TileContent>
                            <!-- Replacement of the Button to the bottom left-->
                            <VBox class="sapUiLargeMarginTop">
                                <core:Icon src="{tiles>icon}" size="1.5rem"></core:Icon>
                            </VBox>
                        </TileContent>
                    </GenericTile>
                </l:HorizontalLayout>
            </l:VerticalLayout>

        </content>
    </Page>
</mvc:View>