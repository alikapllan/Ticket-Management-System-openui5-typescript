<mvc:View controllerName="tmui5.controller.DeleteCustomer"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page id="pageDeleteCustomer">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button icon="sap-icon://nav-back" press=".onNavBack"></Button>
                </contentLeft>
                <contentMiddle>
                    <core:Icon src="sap-icon://sap-ui5" color="#1e90ff"></core:Icon>
                    <Title text="{i18n>deleteCustomer}" class="sapUiTinyMarginBegin"></Title>
                </contentMiddle>
            </Bar>
        </customHeader>

        <content>
            <Panel headerText="Customers({= ${customerModel>/}.length })"
                class="sapUiResponsiveMargin" width="auto">

                <Table id="teamCustomersTable" mode="MultiSelect" items="{customerModel>/}">
                    <!-- Toolbar for Delete Button -->
                    <headerToolbar>
                        <Toolbar>
                            <ToolbarSpacer />
                            <Button text="{i18n>deleteCustomerButtonText}" type="Reject"
                                press=".onDeleteSelectedCustomer" />
                        </Toolbar>
                    </headerToolbar>

                    <!-- Table Columns -->
                    <columns>
                        <Column>
                            <Text text="ID" />
                        </Column>
                        <Column>
                            <Text text="Company Name" />
                        </Column>
                        <Column>
                            <Text text="Email" />
                        </Column>
                        <Column>
                            <Text text="Phone" />
                        </Column>
                    </columns>

                    <!-- Table Items -->
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{customerModel>customerId}" />
                                <Text text="{customerModel>name}" />
                                <Text text="{customerModel>email}" />
                                <Text text="{customerModel>phone}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

            </Panel>
        </content>
    </Page>
</mvc:View>