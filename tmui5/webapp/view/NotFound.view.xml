<mvc:View
    controllerName="tmui5.controller.NotFound"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <Page id="pageNotFound">

        <customHeader>
            <Bar>
                <contentLeft>
                    <Button icon="sap-icon://nav-back" press=".onNavBack"></Button>
                </contentLeft>
                <contentMiddle>
                    <core:Icon src="sap-icon://sap-ui5" color="#1e90ff"></core:Icon>
                    <Title text="{i18n>NotFound}" class="sapUiTinyMarginBegin"></Title>
                </contentMiddle>
            </Bar>
        </customHeader>

        <content>
            <IllustratedMessage
                title="{i18n>NotFoundTitle}"
                illustrationSize="Scene"
                illustrationType="NoSearchResults"
                description="{i18n>NotFound.description}">

                <additionalContent>
                    <Button text="{i18n>NotFound.NavBackToHome}" press=".onNavBackToHomePage" />
                </additionalContent>
            </IllustratedMessage>
        </content>
    </Page>

</mvc:View>