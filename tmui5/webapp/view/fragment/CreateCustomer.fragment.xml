<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layoutF="sap.ui.layout.form">
    <Dialog
        id="createCustomerDialog"
        title="{i18n>createCustomerTitle}"
        icon="sap-icon://sap-ui5"
        state="Information"
        draggable="true">
        <content>
            <layoutF:SimpleForm
                id="formIdCreateCustomer"
                layout="ResponsiveGridLayout"
                editable="true">
                <!-- name -->
                <Label text="Name" required="true" />
                <Input id="customerNameInput" placeholder="Name" />

                <!-- email -->
                <Label text="Email" required="true" />
                <Input id="customerEmailInput" type="Email" placeholder="Email Address" />

                <!-- phone -->
                <Label text="Phone" required="true" />
                <Input id="customerPhoneInput" type="Tel" placeholder="Phone Number" />
            </layoutF:SimpleForm>
        </content>

        <beginButton>
            <Button
                text="{i18n>dialogCreateButtonText}"
                press=".onCreateCustomer"
                type="Emphasized" />
        </beginButton>

        <endButton>
            <Button
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog"
                type="Negative" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>