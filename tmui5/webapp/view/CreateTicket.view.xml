<mvc:View xmlns:core="sap.ui.core"
    controllerName="tmui5.controller.CreateTicket"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layoutF="sap.ui.layout.form"
    xmlns:unified="sap.ui.unified"
    displayBlock="true">
    <Page id="pageCreateTicket">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button icon="sap-icon://nav-back" press=".onNavBack"></Button>
                </contentLeft>
                <contentMiddle>
                    <core:Icon src="sap-icon://sap-ui5" color="#1e90ff"></core:Icon>
                    <Title text="{i18n>createTicket}" class="sapUiTinyMarginBegin"></Title>
                </contentMiddle>
            </Bar>
        </customHeader>

        <content>
            <!-- SimpleForm for Form Layout -->
            <layoutF:SimpleForm
                id="createTicketForm"
                layout="ResponsiveGridLayout"
                editable="true"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                emptySpanXL="3"
                emptySpanL="3"
                emptySpanM="3">

                <layoutF:content>
                    <!-- Ticket Number -->
                    <Label text="{i18n>ticketNumber}" />
                    <Input id="ticketNumberInput" editable="false" />

                    <!-- Ticket Type -->
                    <Label text="{i18n>ticketType}" />
                    <Select>
                        <core:Item key="bug" text="Bug" />
                        <core:Item key="change" text="Change Request" />
                    </Select>

                    <!-- Assigned To -->
                    <Label text="{i18n>assignedTo}" />
                    <Input id="assignedToInputValueHelp" placeholder="{i18n>assignToPlaceholder}"
                        showValueHelp="true"
                        valueHelpRequest=".onValueHelpRequestAssignedTo" />

                    <!-- Email -->
                    <Label text="{i18n>email}" />
                    <Input id="emailInput" editable="false" />

                    <!-- Customer -->
                    <Label text="{i18n>customer}" />
                    <Input id="customerInputValueHelp" placeholder="{i18n>assignToPlaceholder}"
                        showValueHelp="true"
                        valueHelpRequest=".onValueHelpRequestCustomer" />

                    <Label text="{i18n>ticketTitle}" />
                    <Input id="titleInput" />

                    <!-- Description -->
                    <Label text="{i18n>description}" />
                    <TextArea rows="5" maxLength="200"
                        placeholder="{i18n>descriptionPlaceholder}"
                        showExceededText="true" />

                    <Label text="" />
                </layoutF:content>

                <!-- Create and Cancel Buttons -->
                <HBox justifyContent="End" class="sapUiLargeMarginTop">
                    <Button text="{i18n>create}" type="Emphasized" press=".onCreateTicket" />
                    <Button text="{i18n>cancel}" type="Reject" class="sapUiTinyMarginBeginEnd"
                        press=".onCancelTicket" />
                </HBox>
            </layoutF:SimpleForm>
        </content>

    </Page>
</mvc:View>